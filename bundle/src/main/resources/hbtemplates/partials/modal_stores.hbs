<div id="stores">
    <h6>{{i18n 'LABEL_MODAL_STORES'}}</h6>
    {{#if item_data.stores}}
        {{#each item_data.stores}}
            <div class="row store">
                <div class="col-11">
                    <div class="input-group mb-2">
                        <input type="text" class="form-control" data-field="store_name"
                               value="{{this.name}}"
                               placeholder="{{i18n 'LABEL_MODAL_STORE'}}" disabled />
                        <div class="input-group-append pointer" onclick="WC.storeModal({title:'{{i18n 'LABEL_MODAL_STORE'}}'}, this)">
                            <div class="input-group-text">{{i18n 'LABEL_BROWSE'}}</div>
                        </div>
                        <input type="hidden" name="commerce_form[stores][]" data-field="store_id"
                               value="{{this.id}}" />
                    </div>
                </div>
                <div class="col-1">
                    <a href="javascript:void(0)" onclick="WC.formUtil.productManager.productStores('add', this, '#stores', '#stores>.store')">
                        <i class="fa fa-plus-circle"></i>
                    </a>
                    <a href="javascript:void(0)" onclick="WC.formUtil.productManager.productStores('remove', this, '#stores', '#stores>.store')">
                        <i class="fas fa-times-circle"></i>
                    </a>
                </div>
            </div>
        {{/each}}
    {{/if}}
    <div class="row store">
        <div class="col-11">
            <div class="input-group mb-2">
                <input type="text" class="form-control" data-field="store_name" value=""
                       placeholder="{{i18n 'LABEL_MODAL_STORE'}}" disabled />
                <div class="input-group-append pointer" onclick="WC.storeModal({title:'{{i18n 'LABEL_MODAL_STORE'}}'}, this)">
                    <div class="input-group-text">{{i18n 'LABEL_BROWSE'}}</div>
                </div>
                <input type="hidden" name="commerce_form[stores][]" data-field="store_id" value="" />
            </div>
        </div>
        <div class="col-1">
            <a href="javascript:void(0)" onclick="WC.formUtil.productManager.productStores('add', this, '#stores', '#stores>.store')">
                <i class="fa fa-plus-circle"></i>
            </a>
            <a href="javascript:void(0)" onclick="WC.formUtil.productManager.productStores('remove', this, '#stores', '#stores>.store')">
                <i class="fas fa-times-circle"></i>
            </a>
        </div>
    </div>
</div>