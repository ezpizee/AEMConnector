<div id="commerce-alert-container"></div>
<div class="card mb-3">
    <div class="card-header bg-light">
        <div class="row">
            <div class="col-6"><h3 class="mb-0 mt-0">{{page_title}}</h3></div>
            {{#if actions.add}}
                <div class="col-6">
                    <div class="text-right">
                        <a href="{{form_page}}" class="btn btn-primary"><i class="fas fa-plus-circle"></i>&nbsp;{{i18n 'LABEL_ADD'}}</a>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
    <div class="card-body text-justify">
        <div id="commerce-items-list">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    {{#if fieldKeys.id}}<th class="small-col">{{fieldLabels.id}}</th>{{/if}}
                    {{#if fieldKeys.name}}<th class="name">{{fieldLabels.name}}</th>{{/if}}
                    {{#if fieldKeys.name_with_depth}}<th class="name">{{fieldLabels.name_with_depth}}</th>{{/if}}
                    {{#if fieldKeys.internal_name}}<th class="name">{{fieldLabels.internal_name}}</th>{{/if}}
                    {{#if fieldKeys.public_name}}<th class="name">{{fieldLabels.public_name}}</th>{{/if}}
                    {{#if fieldKeys.description}}<th class="description">{{fieldLabels.description}}</th>{{/if}}
                    {{#if fieldKeys.parent}}<th>{{fieldLabels.parent}}</th>{{/if}}
                    {{#if fieldKeys.addr_street}}<th>{{fieldLabels.addr_street}}</th>{{/if}}
                    {{#if fieldKeys.addr_city}}<th>{{fieldLabels.addr_city}}</th>{{/if}}
                    {{#if fieldKeys.addr_province}}<th>{{fieldLabels.addr_province}}</th>{{/if}}
                    {{#if fieldKeys.addr_country}}<th>{{fieldLabels.addr_country}}</th>{{/if}}
                    {{#if fieldKeys.addr_postalcode}}<th>{{fieldLabels.addr_postalcode}}</th>{{/if}}
                    {{#if fieldKeys.email}}<th>{{fieldLabels.email}}</th>{{/if}}
                    {{#if fieldKeys.url}}<th>{{fieldLabels.url}}</th>{{/if}}
                    {{#if fieldKeys.telephone}}<th>{{fieldLabels.telephone}}</th>{{/if}}
                    {{#if fieldKeys.telephone_type}}<th>{{fieldLabels.telephone_type}}</th>{{/if}}
                    {{#if fieldKeys.parent_name}}<th>{{fieldLabels.parent_name}}</th>{{/if}}
                    {{#if fieldKeys.tax_code}}<th>{{fieldLabels.tax_code}}</th>{{/if}}
                    {{#if fieldKeys.tax_rate}}<th>{{fieldLabels.tax_rate}}</th>{{/if}}
                    {{#if fieldKeys.start_date}}<th>{{fieldLabels.start_date}}</th>{{/if}}
                    {{#if fieldKeys.end_date}}<th>{{fieldLabels.end_date}}</th>{{/if}}
                    {{#if fieldKeys.offer_type}}<th>{{fieldLabels.offer_type}}</th>{{/if}}
                    {{#if fieldKeys.percentage_off}}<th>{{fieldLabels.percentage_off}}</th>{{/if}}
                    {{#if fieldKeys.published}}<th class="small-col">{{fieldLabels.published}}</th>{{/if}}
                    {{#if fieldKeys.action}}<th>{{i18n 'LABEL_ACTION'}}</th>{{/if}}
                </thead>
                <tbody>
                {{#if list}}
                    {{#each list}}
                        <tr>
                            {{#if ../fieldKeys.id}}<td>{{this.id}}</td>{{/if}}
                            {{#if ../fieldKeys.name}}<td>{{require "partials/list-name" this}}</td>{{/if}}
                            {{#if ../fieldKeys.name_with_depth}}<td>{{require "partials/list-name_with_depth" this}}</td>{{/if}}
                            {{#if ../fieldKeys.internal_name}}<td>{{require "partials/list-internal_name" this}}</td>{{/if}}
                            {{#if ../fieldKeys.public_name}}<td>{{require "partials/list-public_name" this}}</td>{{/if}}
                            {{#if ../fieldKeys.description}}<td class="desc-more-less">{{{plaintext this.description}}}</td>{{/if}}
                            {{#if ../fieldKeys.parent}}<td>{{this.parent}}</td>{{/if}}
                            {{#if ../fieldKeys.addr_street}}<td>{{this.addr_street}}</td>{{/if}}
                            {{#if ../fieldKeys.addr_city}}<td>{{this.addr_city}}</td>{{/if}}
                            {{#if ../fieldKeys.addr_province}}<td>{{this.addr_province}}</td>{{/if}}
                            {{#if ../fieldKeys.addr_country}}<td>{{this.addr_country}}</td>{{/if}}
                            {{#if ../fieldKeys.addr_postalcode}}<td>{{this.addr_postalcode}}</td>{{/if}}
                            {{#if ../fieldKeys.email}}<td>{{this.email}}</td>{{/if}}
                            {{#if ../fieldKeys.url}}<td>{{this.url}}</td>{{/if}}
                            {{#if ../fieldKeys.telephone}}<td>{{this.telephone}}</td>{{/if}}
                            {{#if ../fieldKeys.telephone_type}}<td>{{this.telephone_type}}</td>{{/if}}
                            {{#if ../fieldKeys.parent_name}}<td>{{fa_status this.parent.name}}</td>{{/if}}
                            {{#if ../fieldKeys.tax_code}}<td>{{this.tax_code}}</td>{{/if}}
                            {{#if ../fieldKeys.tax_rate}}<td>{{this.tax_rate}}%</td>{{/if}}
                            {{#if ../fieldKeys.start_date}}<td align="center">{{{date this.start_date 'Y-m-d'}}}</td>{{/if}}
                            {{#if ../fieldKeys.end_date}}<td align="center">{{{date this.end_date 'Y-m-d'}}}</td>{{/if}}
                            {{#if ../fieldKeys.percentage_off}}<td>{{this.percentage_off}}</td>{{/if}}
                            {{#if ../fieldKeys.offer_type}}<td align="center">{{{i18n this.offer_type}}}</td>{{/if}}
                            {{#if ../fieldKeys.published}}<td align="center">{{{fa_status this.published}}}</td>{{/if}}
                            {{#if ../fieldKeys.action}}
                                <td class="{{#if actions.delete}}small-col-2{{else}}small-col-1{{/if}}" align="center">
                                    {{require 'partials/list-actions' this}}
                                </td>
                            {{/if}}
                        </tr>
                    {{/each}}
                {{else}}
                    <tr><td colspan="{{phpjs 'sizeof' fieldLabels}}">{{i18n 'NO_RESULTS'}}</td></tr>
                {{/if}}
                </tbody>
            </table>
            {{require 'partials/pagination' this}}
        </div>
    </div>
</div>
{{addscriptdeclaration "WC.utilities.applyMoreLess('.desc-more-less')"}}